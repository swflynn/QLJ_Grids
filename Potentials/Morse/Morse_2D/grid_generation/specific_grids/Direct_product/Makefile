#=================20==================40==================60==================80
#			   										Fortran Compiler/Flags
#==============================================================================#
FC=gfortran
#FFLAGS=-O2
FFLAGS= -g -O0 -Wall -Wextra -pedantic -fcheck=all -fbacktrace
#==============================================================================#
#			   														Targets
#==============================================================================#
all: mods grid main
#==============================================================================#
mods:
	$(FC) $(FFLAGS) -c direct_product_mod.f90
#==============================================================================#
grid:
	$(FC) $(FFLAGS) -c direct_product.f90
#==============================================================================#
main:
	$(FC) $(FFLAGS) direct_product_mod.o direct_product.o
#==============================================================================#
clean:
	rm -rf *.o *.mod *.out $(OBJS)
