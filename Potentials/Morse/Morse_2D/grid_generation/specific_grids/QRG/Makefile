#==============================================================================#
#			   Fortran Compiler/Flags
#-O0=no optimization,-O3=full optimization
#==============================================================================#
FC=gfortran
FFLAGS=-O2
#FFLAGS= -g -O0 -Wall -Wextra -pedantic -fcheck=all -fbacktrace
#==============================================================================#
#			   	Targets
#==============================================================================#
all: mods grid main
#==============================================================================#
mods:
	$(FC) $(FFLAGS) -c 2D_QRG_mod.f90
#==============================================================================#
grid:
	$(FC) $(FFLAGS) -c 2D_QRG.f90
#==============================================================================#
#				DGB Cluster
#==============================================================================#
main:
	$(FC) $(FFLAGS) 2D_QRG_mod.o 2D_QRG.o
#==============================================================================#
clean:
	rm -rf *.o *.mod main out a.out
