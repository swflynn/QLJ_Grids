#==============================================================================#
#			      Fortran Compiler/Flags
#-O0=no optimization,-O3=full optimization
#==============================================================================#
FC=gfortran
#FFLAGS=-O2
FFLAGS= -g -O0 -Wall -Wextra -pedantic -fcheck=all -fbacktrace
#==============================================================================#
#Targets
#==============================================================================#
all: potentials dp_mod dp_main runner
#==============================================================================#
potentials:
	$(FC) $(FFLAGS) -c potentials_mod.f90
#==============================================================================#
dp_mod:
	$(FC) $(FFLAGS) -c direct_prod_mod.f90
#==============================================================================#
dp_main:
	$(FC) $(FFLAGS) -c Direct_Prod.f90
#==============================================================================#
runner:
	$(FC) $(FFLAGS) potentials_mod.o direct_prod_mod.o Direct_Prod.o
#==============================================================================#
clean:
	rm -rf *.o *.mod out a.out
