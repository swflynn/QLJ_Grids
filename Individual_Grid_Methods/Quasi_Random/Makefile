#==============================================================================#
#			      Fortran Compiler/Flags
#-O0=no optimization,-O3=full optimization
#==============================================================================#
FC=gfortran
#FFLAGS=-O2
FFLAGS= -g -O0 -Wall -Wextra -pedantic -fcheck=all -fbacktrace
#==============================================================================#
#Targets
#==============================================================================#
all: potentials quasirand qrand_mod qrand_main runner
#==============================================================================#
potentials:
	$(FC) $(FFLAGS) -c potentials_mod.f90
#==============================================================================#
quasirand:
	$(FC) $(FFLAGS) -c sobol.f90
#==============================================================================#
qrand_mod:
	$(FC) $(FFLAGS) -c quasi_rand_mod.f90
#==============================================================================#
qrand_main:
	$(FC) $(FFLAGS) -c Quasi_Rand.f90
#==============================================================================#
runner:
	$(FC) $(FFLAGS) sobol.o potentials_mod.o quasi_rand_mod.o Quasi_Rand.o
#==============================================================================#
clean:
	rm -rf *.o *.mod out a.out
