#==============================================================================#
#			      Fortran Compiler/Flags
#-O0=no optimization,-O3=full optimization
#==============================================================================#
FC=gfortran
#FFLAGS=-O2
FFLAGS= -g -O0 -Wall -Wextra -pedantic -fcheck=all -fbacktrace
#==============================================================================#
#Targets
#==============================================================================#
all: potentials prand_mod prand_main runner
#==============================================================================#
potentials:
	$(FC) $(FFLAGS) -c potentials_mod.f90
#==============================================================================#
prand_mod:
	$(FC) $(FFLAGS) -c pseudo_rand_mod.f90
#==============================================================================#
prand_main:
	$(FC) $(FFLAGS) -c Pseudo_Rand.f90
#==============================================================================#
runner:
	$(FC) $(FFLAGS) potentials_mod.o pseudo_rand_mod.o Pseudo_Rand.o
#==============================================================================#
clean:
	rm -rf *.o *.mod out a.out
