#==============================================================================#
#			      Fortran Compiler/Flags
#-O0=no optimization,-O3=full optimization
#==============================================================================#
FC=gfortran
FFLAGS=-O2
#FFLAGS= -g -O0 -Wall -Wextra -pedantic -fcheck=all -fbacktrace
#==============================================================================#
#			   	    Targets
#==============================================================================#
all: potentials quasirand grids main runner
#==============================================================================#
potentials:
	$(FC) $(FFLAGS) -c potentials_mod.f90
#==============================================================================#
quasirand:
	$(FC) $(FFLAGS) -c sobol.f90
#==============================================================================#
grids:
	$(FC) $(FFLAGS) -c grids_mod.f90
#==============================================================================#
main:
	$(FC) $(FFLAGS) -c main.f90
#==============================================================================#
runner:
	$(FC) $(FFLAGS) sobol.o potentials_mod.o grids_mod.o main.o
#==============================================================================#
clean:
	rm -rf *.o *.mod out a.out

